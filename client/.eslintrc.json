{
    "extends": [
        "react-app",
        "plugin:storybook/recommended"
    ],
    "rules": {
        "react-hooks/exhaustive-deps": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@",
                        "./src"
                    ]
                ],
                "extensions": [
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}
